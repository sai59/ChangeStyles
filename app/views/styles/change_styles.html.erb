<%- model_class = Style -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.change_styles', 'Change %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>
<%= render :partial => 'form' %>

<script type="text/javascript">
  $(document).ready(function(){
    var properties = <%= @style.properties.to_json.html_safe%>;
    $(document).change_styles(properties);
  });
</script>
